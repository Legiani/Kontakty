<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		x:Class="Kontakty.NewPerson"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
		>
	<ContentPage.Content>
		<Grid HeightRequest="140">
				<Grid.ColumnDefinitions >
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
		    	</Grid.ColumnDefinitions>
					
		    	<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
		    	</Grid.RowDefinitions>

				<Label Text="Noví kontakt" Grid.Row="0" Grid.Column="0" FontSize="39" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontAttributes="Bold" />
				<Button Clicked="ulozit" Text="Uložit" Grid.Row="0" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />

				<Label Text="Jméno:" Grid.Row="1" Grid.Column="0" Margin="10" />
				<Entry Placeholder="Santa" Grid.Row="1" Grid.Column="1" x:Name="jmeno" />

				<Label Text="Přijmení:" Grid.Row="2" Grid.Column="0" Margin="10" />
				<Entry Placeholder="Kraus" Grid.Row="2" Grid.Column="1" x:Name="prijmeni"/>

				<Label Text="Věk:" Grid.Row="3" Grid.Column="0" Margin="10"/>
				<Entry Keyboard="Numeric" Placeholder="7" Grid.Row="3" Grid.Column="1" x:Name="vek"/>

		</Grid>

	</ContentPage.Content>
</ContentPage>
